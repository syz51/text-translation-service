# Google GenAI API Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Environment (development, staging, production)
ENVIRONMENT=development

# Optional: Service Authentication
# Uncomment to enable API key authentication
# API_KEY=your_service_api_key_here

# Optional: Server Configuration
# HOST=0.0.0.0
# PORT=8000
# ALLOWED_HOSTS=["*"]

# Optional: CORS Configuration
# CORS_ENABLED=true
# CORS_ORIGINS=["*"]
# CORS_ALLOW_CREDENTIALS=true
# CORS_ALLOW_METHODS=["*"]
# CORS_ALLOW_HEADERS=["*"]

# Optional: Translation Configuration
# DEFAULT_CHUNK_SIZE=100
# MAX_CONCURRENT_REQUESTS=25

# Optional: Database Configuration
# DATABASE_PATH=./data/transcriptions.db  # Default for normal runs; tests use ./data/test.db

# Optional: Logging
# LOG_LEVEL=INFO
# ENABLE_LOG_REDACTION=true  # Redact sensitive data (API keys, tokens) from logs (default: true)

# Optional: AssemblyAI Configuration (for transcription API)
# ASSEMBLYAI_API_KEY=your_key_here

# Optional: Webhook Configuration (for real-time transcription completion)
# If not configured, polling is used as fallback (see POLLING_* settings below)
# WEBHOOK_BASE_URL=https://your-domain.com
# WEBHOOK_SECRET_TOKEN=generate_random_secret_here

# Optional: S3 Configuration (required for transcription API)
# S3_ENDPOINT_URL=https://s3.amazonaws.com
# S3_REGION=us-east-1
# S3_BUCKET_NAME=your-bucket-name
# S3_ACCESS_KEY_ID=your_access_key
# S3_SECRET_ACCESS_KEY=your_secret_key

# Optional: Polling/Recovery Configuration (webhook fallback)
# POLLING_ENABLED=true              # Enable background polling for stale jobs (default: true)
# POLLING_INTERVAL=300              # Polling interval in seconds (default: 5 minutes)
# STALE_JOB_THRESHOLD=7200          # Threshold for stale jobs in seconds (default: 2 hours)
